            <param-name>password</param-name>
            <param-value>bluehair123</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ItemsCatalog</servlet-name>
        <servlet-class>servlets.ItemsCatalog</servlet-class>
